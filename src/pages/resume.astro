    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <!-- <a href="/" class="text-zinc-400 hover:text-emerald-400 transition-colors">
          ‚Üê Back to Home
        </a> -->
      </div>
      <Resume data={data} client:load />
