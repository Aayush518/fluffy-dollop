---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: string;
}

const { title, description, image, tags, link } = Astro.props;
---

<a 
  href={link}
  class="group relative block overflow-hidden rounded-2xl card-hover transition-all duration-300 hover:-translate-y-2"
>
  <div class="aspect-video overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="object-cover w-full h-full transform transition-transform duration-500 group-hover:scale-110"
    />
  </div>
  
  <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/90 to-transparent">
    <div class="absolute bottom-0 p-8">
      <div class="flex gap-2 flex-wrap mb-4">
        {tags.map(tag => (
          <span class="px-3 py-1 bg-zinc-800/50 backdrop-blur-sm text-sm rounded-full">
            {tag}
          </span>
        ))}
      </div>
      
      <h3 class="font-display text-2xl font-bold mb-2 group-hover:text-primary transition-colors">
        {title}
      </h3>
      
      <p class="text-zinc-400 line-clamp-2">
        {description}
      </p>
    </div>
  </div>
</a>